<% if @current_user.admin %>
	<div class="Sign_Form">
		<h1>New Project</h1>
		<hr>
		  <%= form_for(@project) do |f| %>
		  	<p> Project:</br> <%= f.text_field :name%> </p>
		  	<%= f.hidden_field :user_id, value: @current_user.id%>
		    <p> Description:</br> <%= f.text_area :description%> </p>
		  	<p> Deadline:</br> <%= f.date_select :deadline%> </p>
		    <p> Select Members: </p>
				  <% @users.each do |user| %>
			        <%= check_box_tag 'users_ids[]', user.id -%>
			        <%= h user.first_name -%>
				  <% end %>
				</br></br>
		    <%= f.submit 'Create'%>
		  <% end %>
	</div>
<% else %>
	<center> You don't have permission </center>
<% end %>